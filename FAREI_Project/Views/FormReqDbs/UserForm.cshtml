@using FAREI_Project.ViewModel
@model RequestsViewModel
<head>
    <link rel="stylesheet" href="~/css/Admin.css" />
</head>
<partial name="Navbar"></partial>
<div class="container">
    <h1>User info</h1>
    <p><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register a user</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Role
                </th>
                <th>
                   Site
                </th>
                <th>
                    supervisor
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllUsers) {
                <tr>
                    
                    <td>                    
                        @item.UserName                        
                    </td>
                
                    <td>                    
                        @item.Type                
                    </td>
                
                    <td>                    
                        @item.Site                
                    </td>
                
                    <td>                    
                        @item.Supervisor                
                    </td>

                    <td><a asp-action="EditUser" asp-route-id="@item.UserName">Details</a></td>
            </tr>
            }
        </tbody>
    </table>

</div>
