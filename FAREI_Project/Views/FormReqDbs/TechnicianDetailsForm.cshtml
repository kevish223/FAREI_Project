@using FAREI_Project.ViewModel
@model RequestsViewModel

<div>
    <h4>FormReqDb</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormReqDbs.RequestDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormReqDbs.RequestDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormReqDbs.Site)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormReqDbs.Site)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormReqDbs.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormReqDbs.Department)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormReqDbs.ResponsibleOfficer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormReqDbs.ResponsibleOfficer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormReqDbs.ContactPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormReqDbs.ContactPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormReqDbs.EquipmentType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormReqDbs.EquipmentType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormReqDbs.ProblemDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormReqDbs.ProblemDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormReqDbs.SerialNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormReqDbs.SerialNumber)
        </dd>

    </dl>
</div>
<div>
    @if (Model.FormReqDbs.status == "Repairing" || Model.FormReqDbs.status == "Start repairing")
    {
        
        <form asp-action="Report" method="post">
        <input asp-for="Registry.FormReqDbId" value="@Model.FormReqDbs.Id" name="id" type="hidden" />
        <div class="mb-3">
            <input type="hidden" value="pending request"></input>
            <label asp-for="FormReqDbs.remarks"></label>
            <textarea asp-for="FormReqDbs.remarks" name="Remarks" class="form-control"></textarea>
            <span asp-validation-for="FormReqDbs.remarks" class="text-danger"></span>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary" />
        </form>
    }else if(Model.FormReqDbs.status == "Accepted") 
    {
        <div class="mb-3">
            <form asp-action="ChangeStatus" method="post">
                <input type="hidden" name="id" value="@Model.FormReqDbs.Id"></input>
                <input type="radio" class="form-check-input" name="Accepted" value="Onsite"><label class="form-check-label"> Onsite</label><br>
                <input type="radio" class="form-check-input" name="Accepted" value="Transit"><label class="form-check-label"> Transit</label><br>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </form>
        </div>
    }  
</div>
